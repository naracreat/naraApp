<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootProfile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"
            android:background="@drawable/ph_16x9"
            android:padding="6dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="12dp">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tamu"
                android:textColor="@color/text"
                android:textStyle="bold"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Masuk untuk sinkron suka &amp; favorit"
                android:textColor="@color/subtext"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/btnLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masuk"
            android:textColor="@android:color/white"
            android:paddingHorizontal="14dp"
            android:paddingVertical="10dp"
            android:background="@drawable/btn_primary_round" />
    </LinearLayout>

    <!-- Stats Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:orientation="horizontal"
        android:background="@drawable/card_dark_round"
        android:padding="14dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView android:id="@+id/tvStatHistory"
                android:text="0"
                android:textColor="@color/text"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Ditonton"
                android:textColor="@color/subtext"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView android:id="@+id/tvStatLike"
                android:text="0"
                android:textColor="@color/text"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Disukai"
                android:textColor="@color/subtext"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView android:id="@+id/tvStatFav"
                android:text="0"
                android:textColor="@color/text"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Favorit"
                android:textColor="@color/subtext"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

    <!-- Tabs -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tabHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Riwayat"
            android:textColor="@android:color/white"
            android:background="@drawable/tab_active"
            android:paddingHorizontal="14dp"
            android:paddingVertical="10dp" />

        <TextView
            android:id="@+id/tabLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Suka"
            android:textColor="@color/text"
            android:background="@drawable/tab_inactive"
            android:paddingHorizontal="14dp"
            android:paddingVertical="10dp"
            android:layout_marginStart="10dp" />

        <TextView
            android:id="@+id/tabFav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Favorit"
            android:textColor="@color/text"
            android:background="@drawable/tab_inactive"
            android:paddingHorizontal="14dp"
            android:paddingVertical="10dp"
            android:layout_marginStart="10dp" />
    </LinearLayout>

    <!-- Empty -->
    <TextView
        android:id="@+id/tvEmpty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Belum ada data"
        android:textColor="@color/subtext"
        android:textSize="13sp"
        android:gravity="center"
        android:padding="18dp"
        android:visibility="gone" />

    <!-- Grid -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvGrid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="10dp"
        android:clipToPadding="false" />

</LinearLayout>
