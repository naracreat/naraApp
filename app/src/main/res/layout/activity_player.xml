<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg">

    <!-- Video (mirip YouTube: fullscreen width) -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="240dp">

        <androidx.media3.ui.PlayerView
            android:id="@+id/playerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:use_controller="true"
            app:resize_mode="fit" />

        <ImageView
            android:id="@+id/btnFullscreen"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom|end"
            android:layout_margin="10dp"
            android:padding="8dp"
            android:src="@android:drawable/ic_menu_crop"
            android:tint="@color/text"
            android:background="@drawable/card_dark_round"
            android:clickable="true"
            android:focusable="true" />
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="14dp">

            <!-- 2) Judul + klik buka deskripsi -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Judul"
                android:textColor="@color/text"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tvMeta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="0 ditonton â€¢ barusan"
                android:textColor="@color/subtext"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/subtext"
                android:textSize="13sp"
                android:visibility="gone" />

            <!-- 3) Profil channel samain kayak sekarang + 4) Sawer samain subscribe -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imgChannel"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:src="@mipmap/ic_launcher"
                    android:scaleType="centerCrop"
                    android:background="@drawable/card_dark_round"
                    android:clipToOutline="true" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvChannelName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ItsNara"
                        android:textColor="@color/text"
                        android:textStyle="bold"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvChannelRole"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ADMIN"
                        android:textColor="@color/subtext"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Tombol Sawer gaya Subscribe (pill putih) -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSawer"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Sawer"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="#111111"
                    android:backgroundTint="#FFFFFF"
                    app:cornerRadius="20dp"
                    app:icon="@android:drawable/ic_menu_send"
                    app:iconTint="#111111"
                    app:iconGravity="textStart" />
            </LinearLayout>

            <!-- 5) Aksi: Like, Favorit, Unduh, Bagikan -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLike"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:text="Like 0"
                    android:textAllCaps="false"
                    android:textColor="@color/text"
                    android:backgroundTint="@color/card"
                    app:strokeColor="@color/line"
                    app:strokeWidth="1dp"
                    app:cornerRadius="14dp"
                    app:icon="@android:drawable/arrow_up_float"
                    app:iconTint="@color/text"
                    app:iconGravity="textStart" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnFav"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Favorit 0"
                    android:textAllCaps="false"
                    android:textColor="@color/text"
                    android:backgroundTint="@color/card"
                    app:strokeColor="@color/line"
                    app:strokeWidth="1dp"
                    app:cornerRadius="14dp"
                    app:icon="@android:drawable/btn_star_big_off"
                    app:iconTint="@color/text"
                    app:iconGravity="textStart" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDownload"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Unduh"
                    android:textAllCaps="false"
                    android:textColor="@color/text"
                    android:backgroundTint="@color/card"
                    app:strokeColor="@color/line"
                    app:strokeWidth="1dp"
                    app:cornerRadius="14dp"
                    app:icon="@android:drawable/stat_sys_download"
                    app:iconTint="@color/text"
                    app:iconGravity="textStart" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnShare"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Bagikan"
                    android:textAllCaps="false"
                    android:textColor="@color/text"
                    android:backgroundTint="@color/card"
                    app:strokeColor="@color/line"
                    app:strokeWidth="1dp"
                    app:cornerRadius="14dp"
                    app:icon="@android:drawable/ic_menu_share"
                    app:iconTint="@color/text"
                    app:iconGravity="textStart" />
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="14dp"
                android:background="#22FFFFFF" />

            <!-- 7) Video lainnya tetap model sekarang -->
            <TextView
                android:id="@+id/tvRelatedTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Video Terkait"
                android:textColor="@color/text"
                android:textStyle="bold"
                android:textSize="14sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvRelated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
