<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">

    <!-- VIDEO -->
    <androidx.media3.ui.PlayerView
        android:id="@+id/playerView"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="#000"
        android:keepScreenOn="true"
        android:focusable="true" />

    <!-- CONTENT -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="14dp">

            <!-- TITLE (click to toggle desc) -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Judul Video"
                android:textColor="@color/text"
                android:textSize="18sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                android:paddingBottom="6dp" />

            <!-- views + time -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/tvViews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8.7K"
                    android:textColor="@color/subtext"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" • "
                    android:textColor="@color/subtext"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tvTimeAgo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 menit lalu"
                    android:textColor="@color/subtext"
                    android:textSize="13sp" />
            </LinearLayout>

            <!-- DESCRIPTION (hidden until title clicked) -->
            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deskripsi..."
                android:textColor="@color/subtext"
                android:textSize="14sp"
                android:visibility="gone"
                android:paddingBottom="12dp" />

            <!-- PROFILE ROW -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="6dp"
                android:paddingBottom="12dp">

                <ImageView
                    android:id="@+id/imgChannel"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@mipmap/ic_launcher"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="10dp">

                    <TextView
                        android:id="@+id/tvChannelName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ItsNara"
                        android:textColor="@color/text"
                        android:textStyle="bold"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tvChannelMeta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="—"
                        android:textColor="@color/subtext"
                        android:textSize="13sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnSawer"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Sawer"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/accent"
                    android:textColor="@color/text" />
            </LinearLayout>

            <!-- ACTION ROW (samain aja: like/fav/download/share style simple) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Suka"
                    android:textColor="@color/subtext"
                    android:gravity="center"
                    android:padding="10dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Favorit"
                    android:textColor="@color/subtext"
                    android:gravity="center"
                    android:padding="10dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Unduh"
                    android:textColor="@color/subtext"
                    android:gravity="center"
                    android:padding="10dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Bagikan"
                    android:textColor="@color/subtext"
                    android:gravity="center"
                    android:padding="10dp" />
            </LinearLayout>

            <!-- divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line"
                android:layout_marginBottom="12dp" />

            <!-- RELATED TITLE -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Video lainnya"
                android:textColor="@color/text"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingBottom="10dp"/>

            <!-- RELATED LIST -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvRelated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
